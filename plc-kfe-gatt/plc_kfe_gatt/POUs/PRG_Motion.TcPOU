	stMotionStage:=M2,
	fbGoAprt1:=VAA_1_Y_POS[1],
	fbGoAprt2:=VAA_1_Y_POS[2],
	fbGoAprt3:=VAA_1_Y_POS[3],
	fbGoAprt4:=VAA_1_Y_POS[4]);

